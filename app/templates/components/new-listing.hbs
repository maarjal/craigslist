{{#if addNewListing}}
<h1>New Listing</h1>
<form>
  <div class="form-group">
    <label for="owner">Owner</label>
    {{input value=owner id="owner"}}
  </div>
  <div class="form-group">
    <label for="title">Title</label>
    {{input value=title id="title"}}
  </div>
  <div class="form-group">
    <label for="price">Price</label>
    {{input value=price id="price"}}
  </div>
  <div class="form-group">
    <label for="city">City</label>
    {{input value=city id="city"}}
  </div>
  <div class="form-group">
    <label for="body">Body</label>
    {{input value=body id="body"}}
  </div>
  <div class="form-group">
    <label for="date">Date</label>
    {{input value=date id="date"}}
  </div>
  <div class="form-group">
    <label for="image">Image</label>
    {{input value=image id="image"}}
  </div>
  <button {{action 'saveListing1'}}>Save</button>
</form>
{{else}}
  <button {{action 'listingFormShow'}}>New Listing</button>
  {{/if}}
